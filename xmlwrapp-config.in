#! /bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@

usage()
{
    cat <<EOH
Usage: xmlwrapp-config [options]
  --version   print the version number for xmlwrapp
  --libs      print the list of libraries you must use
  --cxxflags  print the C++ compiler flags to use
EOH

    exit 1
}

if test $# -eq 0; then
    usage
fi

while test $# -gt 0; do
    case "$1" in
	--version)
	    echo "@VERSION@"
	    exit 0
	    ;;

	--libs)
	    echo "-L@libdir@  @XMLWRAPP_LINK_FLAGS@"
	    ;;

	--cflags|--cxxflags)
	    echo "-I@includedir@"
	    ;;

	*)
	    usage
	    ;;

    esac
    shift
done

exit 0
